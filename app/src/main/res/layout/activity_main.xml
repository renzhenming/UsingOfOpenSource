            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testOkhttp"
            android:text="okhttp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testGlide"
            android:text="glide" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testRetrofit"
